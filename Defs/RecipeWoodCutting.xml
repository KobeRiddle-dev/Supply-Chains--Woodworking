<?xml version="1.0" encoding="UTF-8"?>

<Defs>
    <!-- Note: Giving a class a suffix `Base` is bad practice, but already established by Rimworld Convention. -->
    <RecipeDef Name="SupplyChains.MakeLumberBase" Abstract="True">
        <jobstring>Cutting lumber from logs.</jobstring>
        <workAmount>400</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <workSkillLearnFactor>0.25</workSkillLearnFactor>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_MakeWoodPlanks_Hand</soundWorking><!--need sfx -->
        <targetCountAdjustment>20</targetCountAdjustment>
        <recipeUsers>
            <li>SupplyChains.WoodTrestle</li>
        </recipeUsers>
    </RecipeDef>

    <RecipeDef ParentName="SupplyChains.MakeLumberBase">
        <defName>SupplyChains.MakeLumberAny</defName>
        <label>make lumber x2</label>
        <description>Cut raw wood into timber.</description>
        <workerCounterClass>SupplyChains.RecipeWorkerCounter_MakeLumber</workerCounterClass>
        <workAmount>30</workAmount>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>SupplyChains.Logs</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>SupplyChains.Logs</li>
            </categories>
        </fixedIngredientFilter>
        <specialProducts>
            <li>Butchery</li>
        </specialProducts>
    </RecipeDef>

</Defs>